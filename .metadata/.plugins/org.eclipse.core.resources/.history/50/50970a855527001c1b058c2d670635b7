package start;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.util.StringTokenizer;

import model.Conexion;

public class Principal {

	public static void main(String[] args) {
		File fchFichero= new File("conexion.cfg");
	}
	private static Conexion leerConexion(File fch) {
		try {
			FileReader reader= new FileReader(fch);
			BufferedReader br= new BufferedReader(reader);
			String sHost,sPort,sDbname,sUserName,sUserPass;
			String sLinea;
			
			sLinea=br.readLine();
			while (sLinea!=null) {
				StringTokenizer st = new StringTokenizer(sLinea,":");
				sHost=st.nextToken();
				sPort=st.nextToken();
				sDbname=st.nextToken();
				sUserName=st.nextToken();
				sUserPass=st.nextToken();
				
				Conexion cPropiedades=new Conexion(sHost,sPort,sDbname,sUserName,sUserPass);
				
			}
			
			
			
			reader.close();
			br.close();
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		
	}

}
